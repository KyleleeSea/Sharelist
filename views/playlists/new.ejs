<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Playlist</h1>
        <div class="col-6 offset-3">
            <form action="/playlists" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <div class="flex-row d-flex">
                        <!-- Add link -->
                        <div class='col-12 mt-3'>
                            <label class="form-label" for="link">Playlist Link</label>
                            <input class="form-control" type="text" id="link" name="playlist[link]" required>
                        </div>
                        <!-- Modal that displays how to find playlist link -->
                        <div class='mt-5 ml-2'>
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#exampleModalCenter">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-question-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z">
                                    </path>
                                    <path
                                        d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z">
                                    </path>
                                </svg> </button>
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">How to find your playlist
                                                link:</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <ul>
                                                <li class='mb-2'>Step 1. Open Spotify and navigate to your playlist</li>
                                                <li class='mb-2'>Step 2. Click the icon with three dots to the right of
                                                    the
                                                    download and
                                                    heart (like) button </li>
                                                <li class='mb-2'>Step 3. Click on "Share" then "Copy link" </li>
                                            </ul>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End of modal -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <!-- Add tags -->
                <div>
                    <p>3 Tags Maximum</p>

                    <% for(let tag of tags) { %>
                        <div class="form-check form-check-inline">

                            <input class="form-check-input" type="checkbox" id="<%=tag%>" name="playlist[<%=tag%>]">
                            <label class="form-check-label" for="<%=tag%>">
                                <%=tag%>
                            </label>
                        </div>

                        <% } %>


                </div>
                <div class="mb-3 mt-3">
                    <button class="btn btn-success">Add Playlist</button>
                </div>
            </form>
            <a href="/playlists">All Playlists</a>
        </div>
    </div>