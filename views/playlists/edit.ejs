<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Playlist</h1>
        <div class="col-6 offset-3">
            <form action="/playlists/<%=playlist._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div>
                    <p>3 Tags Maximum</p>
                    <% for(let tag of tags) { %>
                        <div class="form-check form-check-inline">
                            <!-- Checks if playlist tag already added -->
                            <% let tagCheck=playlist['tags'].includes(tag) ? 'checked' : '' %>
                                <input class="form-check-input" type="checkbox" id="<%=tag%>" name="playlist[<%=tag%>]"
                                    <%=tagCheck%>>
                                <label class="form-check-label" for="<%=tag%>">
                                    <%=tag%>
                                </label>
                        </div>
                        <% } %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Playlist</button>
                </div>
            </form>
            <a href="/playlists/<%= playlist._id%>">Back To Playlist</a>

        </div>
    </div>